require "___scriptsdir___/be.pl";
require "___scriptsdir___/media.pl";


# xst_removable_media_get_list
#
# Return a list of hashes describing the removable media devices present
# on this machine.

sub xst_removable_media_get_list
{
  my @devices;

  @devices = &xst_media_get_list();
  
  # TODO: Weed out fixed media.
  
  return @devices;
}


# xst_removable_media_xml_print
#
# Given a media hash-list, prints the removables inside a <removables> tag
# pair, using current indent levels.

sub xst_removable_media_xml_print
{
  &be_xml_vspace ();
  &be_xml_print ("<removables>\n");
  &be_xml_enter ();

  

  &be_xml_leave ();
  &be_xml_print ("</removables>\n");
  &be_xml_vspace ();
}
