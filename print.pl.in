sub parse_vars
{
  my ($dir, $section, $i, $spools, @known_options) = @_;

  $$$spools{'lp'}{'lpr'}{'JIM'} = "BOB";

  if (-f $dir . "/$section.cfg")
  {
    my $j;
    
    &xst_debug_print_line ("Parse vars in section '$i'");
    
    foreach $j (@known_options)
    {
      &xst_debug_print_line ("option '$j'");
      $val = &xst_parse_sh_export ($dir . "/$section.cfg", $j);
      $$$spools{$i}{'rhs-general'}{$j} = $val;
    }
  }
  else
  {
    &xst_report ("file_open_read_failed", "$dir/$section.cfg");
  }
}

sub xst_printcap_read
{
  my ($file, $spool_dir) = @_;
  my ($fd, $found, $spool, $in_spool);
  my (%output);
  my (%spools);

  $fd = &xst_file_open_read_from_names ("$file");
  return undef if !$fd;
    
  $in_spool = 0;

  while (<$fd>)
  {
    # We'll be emptying $_ as we "scan".
    chomp;

    if ($in_spool) {
        if (/[ \t]*:([^=#]+)[#=]*(.*):/) {
            $spools{$spool}{$1} = $2;
        }

        # Look for line continuation.
        if (/.*\\$/) {
            $in_spool = 1;
        } else {
            $in_spool = 0;
        }
    } elsif (/^([A-Za-z0-9]+):\\/) {
        # Get the spool name.
        $spool = $1;
        $in_spool = 1;

        $spools{$spool}{'name'} = $spool;
#
#        # Pack away the type and description for this spool.
#        $spools{$spool}{'type'} = $type;
#        $spools{$spool}{'description'} = $description;
#
#        # Reset for the next pass.
#        $type = '';
#        $description = '';
#    } elsif ( s/^\#\#PRINTTOOL.*\#\#// ) {
#     # printtool creates a comment line of the form:
#     # ##PRINTTOOL3## printer_type some multi-word description
#     # for each printer entry.  Let's parse it into the consituent
#     # type and description.
#      s/^\s+//;
#      ($type, $description) = split(/\s+/, $_, 2);
    }
  }
  
  close $fd;

# Should be split out...

  foreach $spool (keys %spools) {
      my $dir = $spools{$spool}{'sd'};
      my %tmp;

      if (-d ($dir) && -e ($dir . "/filter")) {
          my @known_options;

          # Parse general.cfg.
          $section = "general.cfg";
          @known_options = ('DESIRED_TO', 'PAPERSIZE',
                            'PRINTER_TYPE', 'ASCII_TO_PS');

          if (-f "$dir/$section") {
              my $j;

              foreach $j (@known_options) {
                  $val = &xst_parse_sh_export ($dir . "/$section", $j);
                  $tmp{$j} = $val;
              }
          } else {
            &xst_report ("file_open_read_failed", "$dir/$section");
          }

          # Parse postscript.cfg.
          $section = "postscript.cfg";
          @known_options = ('GSDEVICE', 'RESOLUTION',
                            'COLOR', 'PAPERSIZE',
                            'EXTRA_GS_OPTIONS', 'REVERSE_ORDER',
                            'PS_SEND_EOF', 'NUP',
                            'RTFLMAR', 'TOPBOTMAR');

          if (-f "$dir/$section") {
              my $j;

              foreach $j (@known_options) {
                  $val = &xst_parse_sh ($dir . "/$section", $j);
                  $tmp{$j} = $val;
              }
          } else {
            &xst_report ("file_open_read_failed", "$dir/$section");
          }

          # Parse textonly.cfg.
          $section = "textonly.cfg";
          @known_options = ('TEXTONLYOPTIONS', 'CRLFTRANS',
                            'TEXT_SEND_EOF');

          if (-f "$dir/$section") {
              my $j;

              foreach $j (@known_options) {
                  $val = &xst_parse_sh ($dir . "/$section.cfg", $j);
                  $tmp{$j} = $val;
              }
          } else {
            &xst_report ("file_open_read_failed", "$dir/$section.cfg");
          }

          # Parse .config
          $section = ".config";
          @known_options = ('share', 'hostip',
                            'user', 'password',
                            'workgroup');

          if (-f "$dir/$section") {
              my $j;

              foreach $j (@known_options) {
                  $val = &xst_parse_sh ($dir . "/$section", $j);
                  if ($val) {
                      $output{$spool}{$j} = $val;
                  }
              }
          } else {
            &xst_report ("file_open_read_failed", "$dir/$section");
          }

          # Build Output
          {
              my (@mapping) = ( 'PRINTER_TYPE', 'type',
                                'PAPERSIZE',    'paper_size',
                                'GSDEVICE',     'gsdevice',
                                'RESOLUTION',   'resolution' );
              my ($src, $dst);

              $output{$spool}{'name'} = $spool;

              while (($src = shift (@mapping))) {
                  $dst = shift (@mapping);
#                  print "Copy '$src'(='$spools{$spool}{$src} to '$dst'\n";
                  if ($tmp{$src}) {
                      $output{$spool}{$dst} = $tmp{$src};
                  }
              }
          }

      } else {
          &xst_report ("print_no_printtool", $spool);
      }
  }

  return \%output;
}

sub xst_print_conf_get
{
    my %data;
    
    $data = &xst_printcap_read ("$xst_prefix/etc/printcap",
                                "$xst_prefix/var/spool/lpd/");

    return $data;
}

