# --- Parsing --- #

sub xst_share_parse_smb_conf
{
  my ($smb_conf_name) = @_;
  my (@sections, $table);

  $table = xst_share_smb_table_new ();

  # Get the sections.

  @sections = &xst_parse_ini_sections ($smb_conf_name);

  for $section (@sections)
  {
    next if ($section =~ /^(global)|(homes)|(printers)$/);
    next if (&xst_parse_ini_bool ($smb_conf_name, $section, "printable"));

    my $sesi = &xst_share_smb_info_new ();
    my $point, $comment, $enabled, $browseable, $public, $writable, $printable;

    $point      = &xst_parse_ini      ($smb_conf_name, $section, "path");
    $comment    = &xst_parse_ini      ($smb_conf_name, $section, "comment");
    $enabled    = &xst_parse_ini_bool ($smb_conf_name, $section, "available");
    $browseable = &xst_parse_ini_bool ($smb_conf_name, $section, "browsable")   ||
                  &xst_parse_ini_bool ($smb_conf_name, $section, "browseable");
    $public     = &xst_parse_ini_bool ($smb_conf_name, $section, "public")      ||
                  &xst_parse_ini_bool ($smb_conf_name, $section, "guest");
    $writable   = &xst_parse_ini_bool ($smb_conf_name, $section, "writable")    ||
                  &xst_parse_ini_bool ($smb_conf_name, $section, "writeable");

    &xst_share_smb_info_set_name    ($sesi, $section);
    &xst_share_smb_info_set_point   ($sesi, $point);
    &xst_share_smb_info_set_comment ($sesi, $comment);
    &xst_share_smb_info_set_enabled ($sesi, $enabled);
    &xst_share_smb_info_set_browse  ($sesi, $browseable);
    &xst_share_smb_info_set_public  ($sesi, $public);
    &xst_share_smb_info_set_write   ($sesi, $writable);

    &xst_share_smb_table_add ($table, $sesi);
  }

  return $table;
}

sub xst_share_parse_nfs_exports
{
  my ($nfs_exports_name) = @_;
  my (@sections, $table, $entries);
  my $point;

  $table = xst_share_nfs_table_new ();

  $entries = &xst_parse_split_hash_with_continuation ($nfs_exports_name, "[ \t]+", "[ \t]+");

  foreach $point (keys %$entries)
  {
    my $clients = $$entries{$point};
    my $info = &xst_share_nfs_info_new ();
    my $client_table = &xst_share_nfs_client_table_new ();

    &xst_share_nfs_info_set_point ($info, $point);

    foreach $client (@$clients)
    {
      my $cinfo = &xst_share_nfs_client_info_new ();
      my $pattern;

      $client =~ /^([a-zA-Z0-9.-_*?@\/]+)/;
      $pattern = $1;
      $pattern = "0.0.0.0/0" if $pattern eq "";
      &xst_share_nfs_client_info_set_pattern ($cinfo, $pattern);

      my $option_str = "";
      my @options;

      if ($client =~ /\((.+)\)/) { $option_str = $1; }
      @options = ($option_str =~ /([a-zA-Z0-9_=-]+),?/mg);

      for $option (@options)
      {
        if ($option eq "rw") { &xst_share_nfs_client_info_set_write ($cinfo, 1); }
        # Add supported NFS export options here. Some might have to be split on '='.
      }

      &xst_share_nfs_client_table_add ($client_table, $cinfo);
    }

    &xst_share_nfs_info_set_client_table ($info, $client_table);
    &xst_share_nfs_table_add ($table, $info);
  }

  return $table;
}

# --- Replacing --- #

sub xst_share_replace_smb_conf
{
  my ($file, $table) = @_;
  my (@sections);

  # Get the sections.

  @sections = &xst_parse_ini_sections ($file);

  for $section (@sections)
  {
    next if ($section =~ /^(global)|(homes)|(printers)$/);
    next if (&xst_parse_ini_bool ($file, $section, "printable"));

    if (!&xst_share_smb_table_find ($table, $section))
    {
      &xst_replace_remove_ini_section ($file, $section);
    }
  }

  for $export (@$table)
  {
    my $point, $comment, $enabled, $browseable, $public, $writable, $printable;
    my $name = &xst_share_smb_info_get_name ($export);

    &xst_replace_ini      ($file, $name, "path",       &xst_share_smb_info_get_point      ($export));
    &xst_replace_ini      ($file, $name, "comment",    &xst_share_smb_info_get_comment    ($export));
    &xst_replace_ini_bool ($file, $name, "available",  &xst_share_smb_info_get_enabled    ($export));
    &xst_replace_ini_bool ($file, $name, "browseable", &xst_share_smb_info_get_browse     ($export));
    &xst_replace_ini_bool ($file, $name, "public",     &xst_share_smb_info_get_public     ($export));
    &xst_replace_ini_bool ($file, $name, "writable",   &xst_share_smb_info_get_write      ($export));

    &xst_replace_remove_ini_var ($file, $name, "browsable");
    &xst_replace_remove_ini_var ($file, $name, "guest");
    &xst_replace_remove_ini_var ($file, $name, "writeable");
  }
}

sub xst_share_nfs_exports_get_next_entry_line  # $infd, $outfd
{
  my ($infd, $outfd) = @_;

  while (<$infd>)
  {
    # Each line is in the following format:
    # <point> <clients>
    my @line = split /[ \t]+/, $_;
    if ($line[0] eq "") { shift @line; }
    if (@line < 1 || &xst_ignore_line (@line)) { print $outfd $_; next; }

    return $_;
  }

  return undef;
}

sub xst_share_nfs_exports_get_entry_line_fields  # line
{
  my ($line) = @_;

  # Remove leading spaces.
  $line =~ s/^[ \t]*//;

  # Remove trailing spaces and comments.
  $line =~ s/[ \t]*\#.*//;

  return split /[ \t]+/, $line;
}

sub xst_share_nfs_info_print_clients
{
  my ($info) = @_;
  my $line = "";
  my $clients, $client;

  $clients = &xst_share_nfs_info_get_client_table ($info);

  for $client (@$clients)
  {
    $line .= &xst_share_nfs_client_info_get_pattern ($client);
    $line .= "(rw)" if (&xst_share_nfs_client_info_get_write ($client));
    $line .= " ";
  }

  return $line;
}

sub xst_share_nfs_info_print_entry
{
  my ($info) = @_;
  my $line;

  # <point>

  $line = sprintf ("%-15s ", &xst_share_nfs_info_get_point ($info));

  # <clients>

  $line .= &xst_share_nfs_info_print_clients ($info);

  return $line;
}

sub xst_share_nfs_client_print_option_hash
{
  my ($opthash) = @_;
  my $string = "";

  for $key (keys %$opthash)
  {
    my $value = $$opthash{$key};

    $string .= "," if $string ne "";
    $string .= $key;

    if ($value eq " ")
    {
      $string .= "=";
    }
    elsif ($value ne "")
    {
      $string .= "=" . $value;
    }
  }

  return $string;
}

sub xst_share_nfs_info_print_synthesized_entry
{
  my ($info, $line) = @_;
  my $outline;
  my $ctable = &xst_share_nfs_info_get_client_table ($info);

  # <point>

  $outline = sprintf ("%-15s", &xst_share_nfs_info_get_point ($info));

  # <clients>

  chomp $line;
  my @clients = split /[ \t]+/, $line;
  shift @clients;

  # Make client hash based on line.

  my $chash = { };

  for $client (@clients)
  {
    my $opthash = { };

    $client =~ /^([a-zA-Z0-9.-_*?@\/]+)/;
    my $pattern = $1;
    $$chash{$pattern} = $opthash;

    my $option_str = "";
    if ($client =~ /\((.+)\)/) { $option_str = $1; }
    @options = ($option_str =~ /([a-zA-Z0-9_=-]+),?/mg);

    for $option (@options)
    {
      my ($key, $value) = split /[=]/, $option;
      next if ($key eq "");

      if ($value eq "" && $option =~ /=/) { $value = " "; }
      $$opthash{$key} = $value;
    }
  }

  # @clients contains client(options) entries.

  for $cinfo (@$ctable)
  {
    my $pattern = &xst_share_nfs_client_info_get_pattern ($cinfo);
    my $opthash = $$chash{$pattern};

    if (&xst_share_nfs_client_info_get_write ($cinfo))
    {
      $$opthash{'rw'} = "";
    }
    else
    {
      delete $$opthash{'rw'};
    }

    $outline .= " " . &xst_share_nfs_client_info_get_pattern ($cinfo);
    my $client_string = &xst_share_nfs_client_print_option_hash ($opthash);
    if ($client_string ne "")
    {
      $outline .= "(" . $client_string . ")";
    }
  }

  return $outline;
}

sub xst_share_nfs_exports_add_entry
{
  my ($file, $info) = @_;
  my ($infd, $outfd);
  my ($line);

  ($infd, $outfd) = &xst_file_open_filter_write_from_names ($file);
  return undef if !$outfd;

  while (<$infd>) { print $outfd $_; }
  close $infd;

  print $outfd &xst_share_nfs_info_print_entry ($info) . "\n";
  close $outfd;
}

sub xst_share_nfs_exports_update_entry  # filename, filesys_info
{
  my ($file, $info) = @_;
  my ($infd, $outfd);
  my ($line);
  my $replaced = 0;

  ($infd, $outfd) = &xst_file_open_filter_write_from_names ($file);
  return undef if !$outfd;

  while ($line = &xst_share_nfs_exports_get_next_entry_line ($infd, $outfd))
  {
    my $point = &xst_share_nfs_exports_get_entry_line_point ($line);

    if (!$replaced && $point eq &xst_share_nfs_info_get_point ($info))
    {
      print $outfd &xst_share_nfs_info_print_synthesized_entry ($info, $line) . "\n";
      $replaced = 1;
    }
    else
    {
      print $outfd $line;
    }
  }

  close $infd;
  close $outfd;
}

sub xst_share_nfs_exports_remove_entry
{
  my ($file, $info) = @_;
  my ($infd, $outfd);
  my ($line);

  ($infd, $outfd) = &xst_file_open_filter_write_from_names ($file);
  return undef if !$outfd;

  while ($line = &xst_share_nfs_exports_get_next_entry_line ($infd, $outfd))
  {
    my $point = &xst_share_nfs_exports_get_entry_line_point ($line);

    if ($point ne &xst_share_nfs_info_get_point ($info))
    {
      print $outfd $line;
    }
  }

  close $infd;
  close $outfd;
}

sub xst_share_nfs_exports_get_entry_line_point
{
  my ($line) = @_;
  my $point;

  ($point) = split /[ \t]+/, $line;
  return $point;
}

sub xst_share_replace_nfs_exports  # filename, table
{
  my ($file, $table) = @_;
  my ($new_table, $old_table);

  $old_table = &xst_share_parse_nfs_exports ($file);
  $new_table = &xst_share_nfs_table_dup ($table);

  for $info (@$new_table)
  {
    my $old_info = &xst_share_nfs_table_find_info_equivalent ($old_table, $info);

#    print "Looking for entry - ";
    if (!$old_info)
    {
#      print "adding.\n";
      &xst_share_nfs_exports_add_entry ($file, $info);
    }
    elsif ($old_info && !&xst_share_nfs_info_match_data ($old_info, $info))
    {
#      print "updating.\n";
      &xst_share_nfs_exports_update_entry ($file, $info);
    }
    else
    {
#      print "found.\n";
    }
  }

  for $old_info (@$old_table)
  {
#    print "Looking for entry - ";
    if (!&xst_share_nfs_table_find_info_equivalent ($new_table, $old_info))
    {
#      print "removing.\n";
      &xst_share_nfs_exports_remove_entry ($file, $old_info);
    }
    else
    {
#      print "found.\n";
    }
  } 
}

1;
