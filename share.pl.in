sub xst_share_nfs_info_new
{
  my $info = {};
  return $info;
}

sub xst_share_nfs_info_dup
{
  my ($orig) = @_;
  my $dup;

  $dup = { %$orig };
  &xst_share_nfs_info_set_client_table ($dup, &xst_share_nfs_client_table_dup (&xst_share_nfs_info_get_client_table ($orig)));
  return $dup;
}

sub xst_share_nfs_info_match_data
{
  my ($info_a, $info_b) = @_;

  if (&xst_share_nfs_info_get_point ($info_a) eq &xst_share_nfs_info_get_point ($info_b) &&
      &xst_share_nfs_info_print_clients ($info_a) eq &xst_share_nfs_info_print_clients ($info_b))
  {
    return 1;
  }

  return 0;
}

