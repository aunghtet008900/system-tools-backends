# --- share_export_smb_info; information on a particular SMB export --- #

sub xst_share_smb_info_new
{
  my $info = {};
  return $info;
}

sub xst_share_smb_info_set
{
  my ($info, $key, $value) = @_;
  
  if ($value eq "")
  {
    delete $info->{$key};
  }
  else
  {
    $info->{$key} = $value;
  }
}

