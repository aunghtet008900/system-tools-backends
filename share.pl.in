# --- share_smb_table; multiple instances of share_smb_info --- #

sub xst_share_smb_table_new
{
  my @array;
  return \@array;
}

sub xst_share_smb_table_add
{
  my ($table, $info) = @_;
  push @$table, $info;
}

sub xst_share_smb_table_find
{
  my ($table, $name) = @_;

  for $i (@$table)
  {
    if (&xst_share_smb_info_get_name ($i) eq $name)
    {
      return $i;
    }
  }

  return undef;
}

