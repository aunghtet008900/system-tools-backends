sub xst_dhcpd_conf_set
{
  my ($values_hash) = @_;
  my (%dist_attrib, $old_hash);
  my $res;

  %dist_attrib = &xst_dhcpd_conf_get_replace_table ();

  $old_hash = &xst_dhcpd_conf_get ();
  $res = &xst_replace_from_table ($dist_attrib{"fn"}, $dist_attrib{"table"},
                                  $values_hash, $old_hash);

  return $res;
}

